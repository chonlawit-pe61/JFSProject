@using JFS.Megazy.MilkyWaySolution.Engine.Structure
@using JFS.Megazy.MilkyWaySolution.Engine.DataRepository
@using JFS.Megazy.MilkyWaySolution.Engine.Singleton
@using Newtonsoft.Json;
@{
    string ComponentName = "participant";
    int caseID = (int)ViewData["caseID"];
    int isSend = (int)ViewData["isSend"];

    CaseProjectMetaData CaseProjectMetaData = null;
    CaseProjectParticipant participant = null;
    if (ViewData["CaseProjectMetaData"] != null)
    {
        CaseProjectMetaData = (CaseProjectMetaData)ViewData["CaseProjectMetaData"];
    }
    if (CaseProjectMetaData != null)
    {

        participant = JsonConvert.DeserializeObject<CaseProjectParticipant>(CaseProjectMetaData.MetaValue);
    }
}
<form id="frm@(ComponentName)">
    <input id="metaID@(ComponentName)" type="hidden" value="@(CaseProjectMetaData != null ? CaseProjectMetaData.MetaID : 0)" />
    <input id="caseID@(ComponentName)" type="hidden" value="@(caseID)" />
    <div class="card">
        <div class="card-header" id="headingOne@(ComponentName)" data-toggle="collapse" data-target="#collapseOne@(ComponentName)" aria-expanded="true" aria-controls="collapseOne@(ComponentName)">
            <span class="font-weight-bold h6 pb-0" style="margin-top: 0.5rem;">6. ผู้เข้าร่วมโครงการ</span>
            <div class="btn-actions-pane-right actions-icon-btn">
                <i class="fa fa-plus animate-icon mr-2"></i>
            </div>
        </div>
        <div id="collapseOne@(ComponentName)" class="collapse" aria-labelledby="headingOne@(ComponentName)" data-parent="#accordion">
            <div class="card-body">
                <div class="form-row @(isSend != 0 ? "donttouch":"")">
                    <label class="font-weight-bold">6.1 เจ้าหน้าที่</label>
                    <div class="col-12 text-right mb-1">
                        <a href="javascript:void(0)" class="btn btn-outline-primary btn-sm border-0 font-size-lg js--add@(ComponentName)" data-type="1" id="btadd@(ComponentName)"><i class="lnr-plus-circle"></i></a>
                    </div>
                    <div class="table-responsive">
                        <table class="table" id="tbofficers@(ComponentName)">
                            <tbody>
                                @{
                                    if (participant != null)
                                    {
                                        int rank = 0;
                                        if (participant.participantofficers.Length > 0)
                                        {
                                            for (int i = 0; i < participant.participantofficers.Length; i++)
                                            {
                                                rank = i + 1;
                                                <tr>
                                                    <td width="10%" class="js--rowrank@(ComponentName)">
                                                        @(rank)
                                                    </td>
                                                    <td width="50%">
                                                        <input type="text" class="form-control js--text form-control-sm js--fullname@(ComponentName)" id="fullName@(rank)@(ComponentName)" maxlength="200" value="@(participant.participantofficers[i].OfficerName)" placeholder="ชื่อ-นามสกุล" />
                                                    </td>
                                                    <td width="40%">
                                                        <input type="text" class="form-control js--text form-control-sm js--responsibility@(ComponentName)" id="responsibility@(rank)@(ComponentName)" maxlength="200" value="@(participant.participantofficers[i].Responsibility)" placeholder="ความรับผิดชอบ" />
                                                    </td>
                                                    <td>
                                                        <a href="javascript:void(0)" class="btn btn-outline-danger btn-sm border-0 font-size-lg js--delete@(ComponentName)" data-type="1"><i class="lnr-cross-circle"></i></a>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                        else
                                        {
                                            <tr>
                                                <td width="10%" class="js--rowrank@(ComponentName)">
                                                    1
                                                </td>
                                                <td width="50%">
                                                    <input type="text" class="form-control js--text form-control-sm js--fullname@(ComponentName)" id="fullName1@(ComponentName)" maxlength="200" placeholder="ชื่อ-นามสกุล" />
                                                </td>
                                                <td width="40%">
                                                    <input type="text" class="form-control js--text form-control-sm js--responsibility@(ComponentName)" id="responsibility1@(ComponentName)" maxlength="200" placeholder="ความรับผิดชอบ" />
                                                </td>
                                                <td>
                                                    <a href="javascript:void(0)" class="btn btn-outline-danger btn-sm border-0 font-size-lg js--delete@(ComponentName)" data-type="1"><i class="lnr-cross-circle"></i></a>
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td width="10%" class="js--rowrank@(ComponentName)">
                                                1
                                            </td>
                                            <td width="50%">
                                                <input type="text" class="form-control js--text form-control-sm js--fullname@(ComponentName)" id="fullName1@(ComponentName)" maxlength="200" placeholder="ชื่อ-นามสกุล" />
                                            </td>
                                            <td width="40%">
                                                <input type="text" class="form-control js--text form-control-sm js--responsibility@(ComponentName)" id="responsibility1@(ComponentName)" maxlength="200" placeholder="ความรับผิดชอบ" />
                                            </td>
                                            <td>
                                                <a href="javascript:void(0)" class="btn btn-outline-danger btn-sm border-0 font-size-lg js--delete@(ComponentName)" data-type="1"><i class="lnr-cross-circle"></i></a>
                                            </td>
                                        </tr>
                                    }
                                }


                            </tbody>
                        </table>
                    </div>
                    <label class="font-weight-bold">6.2 วิทยากร</label>
                    <div class="col-12 text-right mb-1">
                        <a href="javascript:void(0)" class="btn btn-outline-primary btn-sm border-0 font-size-lg js--add@(ComponentName)" data-type="2" id="btaddlec@(ComponentName)"><i class="lnr-plus-circle"></i></a>
                    </div>
                    <div class="table-responsive">
                        <table class="table" id="tbLecturers@(ComponentName)">
                            <tbody>
                                @{
                                    if (participant != null)
                                    {
                                        int rank = 0;
                                        if (participant.participantLecturers.Length > 0)
                                        {
                                            foreach (var i in participant.participantLecturers)
                                            {
                                                rank += 1;
                                                <tr>
                                                    <td width="10%" class="js--rowranklec@(ComponentName)">
                                                        @(rank)
                                                    </td>
                                                    <td width="80%">
                                                        <div class="row">
                                                            <div class="col-md-12 mb-2">
                                                                <input type="text" class="form-control js--text js--lecfullname@(ComponentName) form-control-sm" id="LecfullName@(rank)@(ComponentName)" maxlength="200" value="@(i.LecturerName)" placeholder="ชื่อ-นามสกุล" />
                                                            </div>
                                                            <div class="col-md-7 mb-2">
                                                                <input type="text" class="form-control js--text js--subject@(ComponentName) form-control-sm" id="subject@(rank)@(ComponentName)" maxlength="200" value="@(i.Subject)" placeholder="หัวข้อ" />
                                                            </div>
                                                            <div class="col-md-5 mb-2">
                                                                <input type="text" class="form-control js--text js--time@(ComponentName) form-control-sm" id="time@(rank)@(ComponentName)" maxlength="200" value="@(i.Time)" placeholder="เวลา" />
                                                            </div>
                                                        </div>

                                                    </td>
                                                    <td width="80%" align="center">
                                                        <a href="javascript:void(0)" class="btn btn-outline-danger btn-sm border-0 font-size-lg js--delete@(ComponentName)" data-type="2"><i class="lnr-cross-circle"></i></a>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                        else
                                        {
                                            <tr>
                                                <td width="10%" class="js--rowranklec@(ComponentName)">
                                                    1
                                                </td>
                                                <td width="80%">
                                                    <div class="row">
                                                        <div class="col-md-12 mb-2">
                                                            <input type="text" class="form-control js--text js--lecfullname@(ComponentName) form-control-sm" id="LecfullName1@(ComponentName)" maxlength="200" placeholder="ชื่อ-นามสกุล" />
                                                        </div>
                                                        <div class="col-md-7 mb-2">
                                                            <input type="text" class="form-control js--text js--subject@(ComponentName) form-control-sm" id="subject1@(ComponentName)" maxlength="200" placeholder="หัวข้อ" />
                                                        </div>
                                                        <div class="col-md-5 mb-2">
                                                            <input type="text" class="form-control js--text js--time@(ComponentName) form-control-sm" id="time1@(ComponentName)" maxlength="200" placeholder="เวลา" />
                                                        </div>
                                                    </div>

                                                </td>
                                                <td width="80%" align="center">
                                                    <a href="javascript:void(0)" class="btn btn-outline-danger btn-sm border-0 font-size-lg js--delete@(ComponentName)" data-type="2"><i class="lnr-cross-circle"></i></a>
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td width="10%" class="js--rowranklec@(ComponentName)">
                                                1
                                            </td>
                                            <td width="80%">
                                                <div class="row">
                                                    <div class="col-md-12 mb-2">
                                                        <input type="text" class="form-control js--text js--lecfullname@(ComponentName) form-control-sm" id="LecfullName1@(ComponentName)" maxlength="200" placeholder="ชื่อ-นามสกุล" />
                                                    </div>
                                                    <div class="col-md-7 mb-2">
                                                        <input type="text" class="form-control js--text js--subject@(ComponentName) form-control-sm" id="subject1@(ComponentName)" maxlength="200" placeholder="หัวข้อ" />
                                                    </div>
                                                    <div class="col-md-5 mb-2">
                                                        <input type="text" class="form-control js--text js--time@(ComponentName) form-control-sm" id="time1@(ComponentName)" maxlength="200" placeholder="เวลา" />
                                                    </div>
                                                </div>

                                            </td>
                                            <td width="80%" align="center">
                                                <a href="javascript:void(0)" class="btn btn-outline-danger btn-sm border-0 font-size-lg js--delete@(ComponentName)" data-type="2"><i class="lnr-cross-circle"></i></a>
                                            </td>
                                        </tr>
                                    }
                                }

                            </tbody>
                        </table>
                    </div>
                    <label class="font-weight-bold col-12">6.3 ผู้เข้าร่วมโครงการ</label>
                    <div class="col-md-12">
                        <label>จำนวน</label>
                        <div class="input-group input-group-sm">
                            <input type="text" class="form-control input-number js--text form-control-sm col-md-4" id="Participant@(ComponentName)" maxlength="10" value="@(participant != null ? participant.Participant : 0)" placeholder="" />
                            <div class="input-group-append ">
                                <span class="input-group-text">คน</span>
                            </div>
                        </div>
                    </div>
                    <label class="font-weight-bold col-12">6.4 ผู้สังเกตการณ์(ถ้ามี)</label>
                    <div class="col-md-12">
                        <label>จำนวน</label>
                        <div class="input-group input-group-sm">
                            <input type="text" class="form-control input-number js--text form-control-sm col-md-4" id="Observer@(ComponentName)" maxlength="10" value="@(participant != null ? participant.Observer : 0)" placeholder="" />
                            <div class="input-group-append ">
                                <span class="input-group-text">คน</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 text-right">
                        <a href="javascript:void(0)" class="btn btn-outline-secondary btn-sm border-0 js--cancel" style="display:none;">ยกเลิก</a>
                        <a href="javascript:void(0)" class="btn btn-outline-primary btn-sm border-0 js--btsave" id="btsave@(ComponentName)" style="display:none;">บันทีก</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

</form>
@Html.Script(
    @<script src="@Url.Content("~/assets/js/scripts-init/jf-"+ComponentName+".js")" type="text/javascript"></script>
)
